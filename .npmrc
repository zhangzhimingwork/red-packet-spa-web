# 使用官方 npm registry（Cloudflare 可访问）
registry=https://registry.npmjs.org/

# 基本配置
engine-strict=true
save-exact=false
package-lock=true

# 强制使用 legacy peer deps 解决 React 19 兼容性问题
legacy-peer-deps=true

# 跳过可选依赖（puppeteer, cypress 等大型测试工具）
optional=false

# 禁用不必要的功能以加快安装速度
fund=false
audit=false
progress=false
