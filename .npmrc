# npm 配置 - Cloudflare Pages 兼容版本
# 使用官方 npm registry，而不是私有 registry
registry=https://registry.npmjs.org/

engine-strict=true
save-exact=false
package-lock=true

# 强制使用 legacy peer deps 解决 React 19 兼容性问题
legacy-peer-deps=true

# 跳过可选依赖（puppeteer, cypress 等）
optional=false

# 禁用不必要的功能以加快安装速度
fund=false
audit=false
progress=false
